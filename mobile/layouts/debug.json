{
  "updatedAt": "{{date}}",
  "items": [
    {% for lang, l in collections.tree -%}
    {%- for topic, t in l -%}{%- if t.topic -%}
    {
      "slug": "{{ t.topic }}",
      "type": "topic",
      "title": "{{ t.title }}",
      "parentTitle": "",
      "locale": "{{ t.lang }}",
      "categories": [
{%- set comma = joiner() -%}
{%- for prof in t.profile -%}
        {{ comma() }} "profile:{{ prof }}"
{%- endfor -%}
{%- for plat in t.platform -%}
        {{ comma() }} "platform:{{ plat }}"
{%- endfor -%}
{%- for prot in t.protect -%}
        {{ comma() }} "protect:{{ prot }}"
{%- endfor -%}
      ],
      "updatedAt": "2015-11-26T00:00:00.000Z",
      "downloadUrl": "https://openmentoring.io/dist/{{t.topic}}.zip"
    }
  ,
    {% endif -%}{%- endfor -%}
  {%- endfor -%}
{%- set comma = joiner() -%}
{%- for lang, l in collections.tree -%}
  {%- for topic, t in l -%}{%- if t.topic -%}
    {%- for unit, u in t -%}{%- if u.unit -%}
  {{ comma() }}
    {
      "slug": "{{ u.topic }}_{{ u.unit }}",
      "type": "unit",
      "title": "{{ u.title }}",
      "parentTitle": "{{ t.title }}",
      "locale": "{{ u.lang }}",
      "categories": [
        {%- set in_comma = joiner() -%}
        {%- for prof in u.profile -%}
          {{ in_comma() }} "profile:{{ prof }}"
        {%- endfor -%}
        {%- for plat in u.platform -%}
          {{ in_comma() }}"platform:{{ plat }}"
        {%- endfor -%}
        {%- for prot in u.protect -%}
          {{ in_comma() }}"protect:{{ prot }}"
        {%- endfor -%}
      ],
      "updatedAt": "2015-11-26T00:00:00.000Z",
      "downloadUrl": "https://openmentoring.io/dist/{{u.topic}}.zip"
    }
  {% endif -%}{%- endfor -%}
{%- endif -%}{%- endfor -%}
{%- endfor -%}
  ]  
}